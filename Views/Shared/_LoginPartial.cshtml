@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <a  class="nav-link text-light font-weight-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Olá @User.Identity.Name!
            </a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-warning font-weight-bold">
                    <i class="fa fa-sign-out-alt"></i>&nbsp;Sair
                </button>
            </form>
        </li>
    } else {
        <li class="nav-item">
            <a class="nav-link font-weight-bold text-primary" asp-area="Identity" asp-page="/Account/Register">
                Cadastrar
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold text-success" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>