@model IEnumerable<VaccineSystem.Models.Address>

@{
    ViewData["Title"] = "Listagem de endereços";
}

<h1>
    Listagem de endereços
</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i>
        Cadastrar Endereço
    </a>
</p>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person.full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.neighborhood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.street)
            </td>
            <td>
                @if(item.complement == null) {
                    <span>
                        Nenhum
                    </span>
                } else {
                    @Html.DisplayFor(modelItem => item.complement)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.neighborhood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                <a asp-action="Edit" title="Editar" class="btn btn-warning" asp-route-id="@item.id_address">
                    <i class="fas fa-pen"></i>
                </a>
                <a asp-action="Details" title="Visualizar" class="btn btn-primary" asp-route-id="@item.id_address">
                    <i class="fas fa-eye"></i>
                </a>
                <a asp-action="Delete" title="Deletar" class="btn btn-danger" asp-route-id="@item.id_address">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    $(document).ready(() => {
        // APLICA O DATATABLE COM A LÍNGUA PORTUGUESA
        $(".table").DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/pt_br.json"
            }
        });
    });
</script>